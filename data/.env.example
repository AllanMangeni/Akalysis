# Akash Network Data Collection Environment Variables
# Copy this file to .env and fill in your values

# API Settings
AKASH_RPC_NODE=https://rpc.akashnet.net:443
AKASH_REST_API=https://api.akashnet.net

# Database Settings (if using MongoDB)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE=akalysis

# Database Settings (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=akalysis
POSTGRES_USER=akalysis_user
POSTGRES_PASSWORD=your_secure_password_here

# Alert Settings
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Optional: Custom API Keys
COINGECKO_API_KEY=

# Collection Settings
DATA_COLLECTION_INTERVAL=300
LOG_LEVEL=INFO

# Storage Path
DATA_STORAGE_PATH=./collected_data
